<h2>Results index</h2>

<table class="table table-hover table-inverse">
  
  
  <% if @range == "User" %>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
  </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user_path(user) do %>
          <%= image_tag user.get_profile_image, size: '50x50' %>
          <% end %>
          </td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    
    <tbody>
      <% @books.each do |book| %>
      <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
        <tr>
          <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
          <td><%= link_to(book.user) do %>
              <%= book.title %>
              <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>